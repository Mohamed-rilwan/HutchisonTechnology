{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2023",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "isolatedModules": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}